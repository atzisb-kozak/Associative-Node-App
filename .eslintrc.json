{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"no-console": "error",
		"no-empty": "error",
		"no-unused-vars": "warn",
		"no-var": "error",
		"no-await-in-loop": "error",
		"no-async-promise-executor": "error",
		"max-len": ["error",{"code": 100, "tabWidth": 2}]
	}
}
